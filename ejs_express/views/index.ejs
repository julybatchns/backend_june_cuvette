<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include ("partials/header.ejs") %>

    <!-- <h1><%= title %></h1> -->
    <h2>User Details:</h2>
    <p>Name: <%= user.name %></p>
    <p>Age: <%= user.age %></p>

    <h3>Hobbies:</h3>
    <ul>
      <% user.hobbies.forEach(function(hobby) { %>
      <li><%= hobby %></li>
      <% }) %>
    </ul>
  </body>
</html>
